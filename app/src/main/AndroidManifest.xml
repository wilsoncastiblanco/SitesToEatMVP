<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sitestoeat">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activities.RegisterUsersActivity"
            android:label="@string/title_activity_register_users"
            android:parentActivityName=".view.activities.LoginActivity"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.example.sitestoeat.view.activities.LoginActivity" />
        </activity>

        <provider
            android:name="data.contentProviders.RestaurantsContentProvider"
            android:authorities="data.contentProviders.restaurants" />

        <provider
            android:name="data.contentProviders.UsuariosContentProvider"
            android:authorities="org.android.food.modelo.contentProviders.UsuariosContentProvider" />

        <activity
            android:name=".view.activities.RestaurantsActivity"
            android:label="@string/title_activity_restaurants"
            android:theme="@style/AppTheme.NoActionBar" />

        <service android:name=".view.services.RequestService" />

    </application>

</manifest>